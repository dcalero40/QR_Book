<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newBookFragment"
    android:background="@color/colorNaranjaBajo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/signInForm"
                android:paddingHorizontal="15dp">

                <EditText
                    android:id="@+id/nameBookEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NOMBRE"
                    android:textColorHint="@color/colorNaranjaFuerte"
                    android:inputType="text"
                    android:background="@color/colorBlanco"
                    android:padding="10dp"
                    android:textSize="24sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/yearBookEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="AÑO PUBLICACIÓN"
                    android:textColorHint="@color/colorNaranjaFuerte"
                    android:textSize="24sp"
                    android:background="@color/colorBlanco"
                    android:inputType="number"
                    android:padding="10dp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/autorBookEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="AUTOR"
                    android:textColorHint="@color/colorNaranjaFuerte"
                    android:textSize="24sp"
                    android:background="@color/colorBlanco"
                    android:inputType="text"
                    android:padding="10dp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:textAlignment="center"/>

                <com.sanojpunchihewa.glowbutton.GlowButton
                    android:id="@+id/subirBookBtn"
                    android:layout_width="match_parent"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp"
                    android:background="@color/colorBlanco"
                    android:text="SUBIR LIBRO"
                    android:textColor="@color/colorBlanco"
                    app:buttonColor="@color/colorNaranjaFuerte"
                    app:glowColor="@color/colorNaranjaBajo"
                    />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>